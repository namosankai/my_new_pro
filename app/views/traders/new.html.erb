
<body>
    <div class="main trader-new">
        <div class="container">
            <div class="section-title">
                 業者追加
            </div>
            <%= form_tag("/traders/create") do %>
                <div class="form-heading">
                    <div class="users-form">
                        <div class="form-body">
                            <% @trader.errors.full_messages.each do |message| %>
                            <div class="form-error">
                                <%= message %>
                            </div>
                            <% end %>


                           
                            <div class="form">
                                <textarea name="content"><%= @trader.content %></textarea>
                                <p>食品選択y=1/n=0</p>
                                <input name="food" value="<%= @trader.food %>">
                                <p>飲物選択y=1/n=0</p>
                                <input name="drink" value="<%= @trader.drink %>">
                                <p>その他</p>
                                <input name="other" value="<%= @trader.other %>">
                                <input type="submit" value="追加">
                            </div>
                            
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</body>