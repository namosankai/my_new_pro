<div class="main trader-new">
  <div class="container">
    <h1 class="form-heading">編集する</h1>
    <%= form_tag("/traders/#{@trader.id}/update") do %>
      <div class="form">
        <div class="form-body">

          <% @trader.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>
          
          <textarea name="content"><%= @trader.content %></textarea>
          <p>食品選択y=1/n=0</p>
          <input name="food" value="<%= @trader.food %>">
          <p>飲物選択y=1/n=0</p>
          <input name="drink" value="<%= @trader.drink %>">
          <p>その他</p>
          <input name="other" value="<%= @trader.other %>">
          <input type="submit" value="保存">
        </div>
      </div>
    <% end %>
  </div>
</div>